<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-3" role="complementary">
                <nav class="float-left">
                    <ul class="nav flex-column">
                        <!-- Logo -->
                        <li>
                            <div class="logo-wrapper">
                                <a href="/">
                                    <img src="~/BO_Logo/Logo_text.svg"
                                         class="img-fluid flex-center">
                                </a>
                            </div>
                        </li>
                        <!--/. Logo -->
                        <partial name="_LoginPartial" />
                        <li role="separator" class="divider"></li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-dark" asp-area="" asp-controller="Beers" asp-action="Index">Beers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-dark" asp-area="" asp-controller="BeerStyles" asp-action="Index">Styles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-dark" asp-area="" asp-controller="Brewery" asp-action="Index">Breweries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-dark" asp-area="" asp-controller="Countries" asp-action="Index">Countries</a>
                        </li>
                    </ul>
                    <!-- Search form -->
                    <form asp-controller="Beers" asp-action="Index">
                        <p>
                            <input type="text" name="SearchString">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </p>
                    </form>
                    <!--/. Search form -->
                </nav>
            </div>

            <div class="col-md-9" role="main">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - BeerOverflow - Team Carslberg <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
