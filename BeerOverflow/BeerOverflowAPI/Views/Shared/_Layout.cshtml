            </div>
        </nav>

        <div class="container body-content fixed-top" style=" margin-left:20% ;width:80%">

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - BeerOverflow - Team Carslberg <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
