@model BeerViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Team Carlsberg's BeerOverflow</h1>
    <div class="card">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h4 class="card-title">@Model.Name </h4>
            <p class="card-text"> @Model.StyleName, @Model.ABV %</p>
            <p class="card-text"> @Model.Country, @Model.Brewery %</p>
            
            <a asp-action="Details" asp-route-id="@Model.ID" class="card-link">Details</a>
        </div>
    </div>
</div>
