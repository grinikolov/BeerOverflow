<div>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Users" asp-action="Drink">Add to DrankList |</a>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Users" asp-action="Wish">Add to WishList |</a>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Review" asp-action="Create"> Write a Review |</a>

    }
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit |</a>

    }
    <a asp-action="Index">Back to List</a>

</div>
<div>
    <dl class="row">
        @foreach (var item in Model.Reviews)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => item.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Description)
            </dd>
            <dt>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                @if (item.UserName == User.Identity.Name)
                {
                    <a asp-action="Edit" asp-route-id="@item.ID">| Edit |</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                }
            </dt>
        }
    </dl>
</div>